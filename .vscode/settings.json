{
    "editor.wordWrap": "bounded",
    "yaml.schemas": {
        "./schemas/character-class.schema.json": [
            "class/*/*.json",
            "class/*/*.yaml",
            "class/*/*.yml",
        ],
        "./schemas/character-ancestry.schema.json": [
            "ancestry/*/*.json",
            "ancestry/*/*.yaml",
            "ancestry/*/*.yml",
        ],
        "./schemas/character-action.schema.json": [
            "action/*.json",
            "action/*.yaml",
            "action/*.yml"
        ],
        "./schemas/character-background.schema.json": [
            "background/*.json",
            "background/*.yaml",
            "background/*.yml",
        ],
        "./schemas/character-heritage.schema.json": [
            "heritage/*/*.json",
            "heritage/*/*.yaml",
            "heritage/*/*.yml",
        ],
        "./schemas/character-feature.schema.json": [
            "class/*/features/*.json",
            "class/*/features/*.yaml",
            "class/*/features/*.yml",
            "ancestry/*/features/*.json",
            "ancestry/*/features/*.yaml",
            "ancestry/*/features/*.yml"
        ]
    }
}
